@using BookStore.Models
@model Book

@{
    ViewData["Title"] = Model.Title;
    Layout = "_CustomLayout";
}

<div class="row justify-content-between mt-60-px" style="margin-top: 100px;">
    <div class="col-md-3">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="@Model.Title" />
    </div>
    <div class="col-md-7">
        <div class="row justify-content-center mt-70-px">
            <h3>@Model.Title</h3>
            <div>
                <span class="mt-2">
                    <i class="bi bi-star-fill text-warning"></i>
                    <span class="text-muted">Rate :  @Model.Rate.ToString("0.0")</span>
                </span>
            </div>
            <div>
                <span class="mt-2">
                    <i class="bi bi-currency-dollar text-warning"></i>
                    <span class="text-muted">Price :  @Model.Price.ToString("0.0")</span>
                </span>
            </div>

            <div>
                <span class="text-muted mr-3">
                    <i class="bi bi-calendar-week"></i>
                    Published At :  @Model.Year
                </span>
            </div>
            <div>
                <span class="text-muted">
                    <i class="bi bi-book"></i>
                    Category :   @Model.Category.Name
                </span>
            </div>
            <div>
                <span class="text-muted">
                    <i class="bi bi-person"></i>
                    Auther Name :  @Model.Author.Name
                </span>
            </div>
        </div>
        <p class="text-justify mt-3"> @Model.Storeline</p>
    </div>
</div>